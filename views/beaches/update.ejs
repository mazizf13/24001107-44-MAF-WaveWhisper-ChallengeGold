<% layout("layouts/app") %>

<h1>Update Beach</h1>
<form action="/beaches/<%= beach._id %>?_method=PUT" method="POST">
  <div>
    <label for="title">Title</label>
    <input
      type="text"
      name="beach[title]"
      id="title"
      value="<%= beach.title %>"
    />
  </div>
  <div>
    <label for="cost">Cost</label>
    <input type="text" name="beach[cost]" id="cost" value="<%= beach.cost %>" />
  </div>
  <div>
    <label for="location">Location</label>
    <input
      type="text"
      name="beach[location]"
      id="location"
      value="<%= beach.location %>"
    />
  </div>
  <button type="submit">Save</button>
</form>
